def main():
   
    #open file
   fp = open_file()
    
    
   master_list = read_file(fp)

   
   # shoots left, shoots right
   
   righty, lefty = shoots_left_right(master_list)
   
   print('Number of right shooters: ',righty)
   print("Number of lefty shooters:", lefty)
   
   
   # position
   
   left_wing, right_wing, center, defense = position(master_list)
   
   print('The number of left wing players:', left_wing)
   print('The number of right wing players:', right_wing)
   print("The number of centers:", center)
   print("The number of defense players:", defense)
   
    #next
    
   left_wing_shoots_right, right_wing_shoots_left = off_side_shooter(master_list)
    

   print('left wing but shoors right handed:', left_wing_shoots_right)
   print('right wing but shoots left handed:', right_wing_shoots_left)
   
   #points per game
   
   list_tuple = points_per_game(master_list)
   print("heres a list:",list_tuple)
   
   #games played
   
   list_of_games_played = games_played(master_list)
   
   print("tuple for games played by each player:", list_of_games_played)
   
   
    
  

if __name__ == "__main__":
    main()
